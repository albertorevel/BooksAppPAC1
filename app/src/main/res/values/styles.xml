<resources>

    <!-- Tema básico de la aplicación -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Colores del tema. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.TransitionedActivity">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.TransitionedActivity">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!--Letras del último ejercicio-->
    <style name="List.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/coverListTitleColor</item>
        <item name="android:textSize">@dimen/big_TextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="List.Text" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/coverListTextColor</item>
        <item name="android:textSize">@dimen/medium_TextSize</item>
    </style>


</resources>
