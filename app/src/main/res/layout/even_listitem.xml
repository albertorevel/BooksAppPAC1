<?xml version="1.0" encoding="utf-8"?>

<!--Elemento par de la lista de libros. Incluye el elemento de base y le aplica
 tanto una serie de márgenes como un color de fondo -->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginTop="@dimen/big_margin"
    android:layout_marginBottom="@dimen/big_margin">

    <!--Elemento base que contiene las vistas que se usarán -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation">

        <include
            layout="@layout/base_listitem"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>