<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookListActivity">

    <!--Este layout es el que se usa desde la actividad de lista de libros,
        en pantallas no divididas (m칩viles)-->

    <!--Objeto listview que contendr치 la lista de libros (master) del ejercicio 1 -->
    <!--
    <ListView>
        android:id="@+id/book_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
     -->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <!--Widget que permite implementar la actualizaci칩n de la lista al hacer un desplazamiento hacia -->
    <!--arriba cuando ya no puede desplazarse m치s-->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar">

        <!-- Objeto recyclerview que contiene la lista de libros definida en el ejercicio 2 -->
        <arevel.uoc.booksapppac1.custom_views.FadingBottomRecyclerView
            android:id="@+id/book_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:cacheColorHint="@color/colorPrimaryDark"
            android:clipToPadding="false"
            android:fadingEdgeLength="@dimen/fadingEdgeLength"
            android:foregroundGravity="center_horizontal"
            android:requiresFadingEdge="vertical"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_bar" />
    </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>